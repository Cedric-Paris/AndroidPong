<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cedric.androidpong.MenuActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/app_name"
        android:id="@+id/textTitre"
        android:layout_above="@+id/createGameButton"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textColor="#aaff4800"
        android:textSize="50dp"/>


    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/textCreateButton"
        android:id="@+id/createGameButton"
        android:layout_above="@+id/joinGameButton"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/textJoinButton"
        android:id="@+id/joinGameButton"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        />

    <Button
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="@string/textQuitButton"
        android:id="@+id/quitAppButton"
        android:layout_below="@+id/joinGameButton"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>
